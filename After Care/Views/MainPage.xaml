<Page
    x:Class="After_Care.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
        <StackPanel.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontSize" Value="15" />
            </Style>
        </StackPanel.Resources>
            
        <StackPanel Name="StackApkByCatsP1" Orientation="Horizontal" HorizontalAlignment="Left">
            <!--CAT#1 Web Browsers-->
            <TextBlock>Web Browsers</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesWebBrowsers}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#2  Email Clients-->
            <TextBlock Grid.Row="1" Grid.Column="2">Email Clients</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesEmail}" >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#3  Files & Utilities-->
            <TextBlock >Files And Utilities</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesFilesAndUtils}"  >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}"  Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#4  Navigation-->
            <TextBlock  >Navigation</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesNavigation}"  >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#5  Media-->
            <TextBlock>Media</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesMedia}" >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <StackPanel Name="StackApkByCatsP2" Orientation="Horizontal" HorizontalAlignment="Left">
            <!--CAT#6  Social & Messegings -->
            <TextBlock>Social And Messegings</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesSocialMesseging}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#7  NetWork & Ad Blockers-->
            <TextBlock>NetWork And Ad Blockers</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesNetworkAndAdBlocker}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}"  Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#8  Alt Stores-->
            <TextBlock >Alt Stores</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesAltStores}" >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#9 Anime-->
            <TextBlock  >Anime</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesAnime}"  >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--</Grid>-->
        </StackPanel>
        <StackPanel Orientation="Vertical">
                <StackPanel  Name="StackDeviceDetails" Orientation="Horizontal" Padding="20" HorizontalAlignment="Center">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="5" />
                        </Style>
                    </StackPanel.Resources>
                    <TextBlock  Text="Model:"></TextBlock>
                    <TextBox Name="textDeviceModel"   IsReadOnly="True" Text="{x:Bind Path=ViewModel.TextDeviceModel.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <TextBlock   Text="Code Name:"></TextBlock>
                    <TextBox Name="textDeviceName"   IsReadOnly="True" Text="{x:Bind Path=ViewModel.TextDeviceName.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <TextBlock    Text="Device's Architecture:"></TextBlock>
                    <TextBox Name="textDeviceArchitecture" AutomationProperties.Name="simple ToggleSwitch"  IsReadOnly="True" Text="{x:Bind Path=ViewModel.TextDeviceArchitecture.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Choose APK/s Folder:"></TextBlock>
                    <Button x:Name="PickFolderButton" Content="Open a folder" Click="PickFolderButton_Click"/>
                    <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                        <TextBlock x:Name="PickFolderOutputTextBlock" TextWrapping="Wrap" FontSize="14"/>
                    </StackPanel>

                    <TextBlock x:Name="textApkFilesName" Text="Apk Files" Padding="20"></TextBlock>
                    <CheckBox x:Name="OptionsAllCheckBox" Content="Select all" IsChecked="False" Checked="SelectAll_Checked" Unchecked="SelectAll_Unchecked"></CheckBox>

                    <ListView ItemsSource="{x:Bind ViewModel.ApkFiles}" HorizontalAlignment="Left">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="CheckBox">
                                <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
         </StackPanel>
            <Button Background="Green" Padding="50,20" Margin="0,20" FontSize="22" Content="Install" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </StackPanel>
    </ScrollViewer>
</Page>
