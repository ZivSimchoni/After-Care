<Page
    x:Class="After_Care.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
        <StackPanel.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontSize" Value="15" />
            </Style>
        </StackPanel.Resources>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <!--CAT#1 Web Browsers-->
            <TextBlock>Web Browsers</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesWebBrowsers}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#2  Email Clients-->
            <TextBlock Grid.Row="1" Grid.Column="2">Email Clients</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesEmail}" >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#3  Files & Utilities-->
            <TextBlock >Files And Utilities</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesFilesAndUtils}"  >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}"  Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#4  Navigation-->
            <TextBlock  >Navigation</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesNavigation}"  >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#5  Media-->
            <TextBlock>Media</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesMedia}" >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <!--CAT#6  Social & Messegings -->
            <TextBlock>Social And Messegings</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesSocialMesseging}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#7  NetWork & Ad Blockers-->
            <TextBlock>NetWork And Ad Blockers</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesNetworkAndAdBlocker}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}"  Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#8  Alt Stores-->
            <TextBlock >Alt Stores</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesAltStores}" >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--CAT#9 Anime-->
            <TextBlock  >Anime</TextBlock>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFilesAnime}"  >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--</Grid>-->
        </StackPanel>
        <StackPanel>
            <TextBlock HorizontalAlignment="Left" Text="Model:"></TextBlock>
            <TextBox Name="textDeviceModel"  HorizontalAlignment="Left" IsReadOnly="True" Text="{x:Bind Path=ViewModel.TextDeviceModel.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <TextBlock  HorizontalAlignment="Left" Text="Code Name:"></TextBlock>
            <TextBox Name="textDeviceName"  HorizontalAlignment="Left" IsReadOnly="True" Text="{x:Bind Path=ViewModel.TextDeviceName.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <TextBlock   HorizontalAlignment="Left" Text="Device's Architecture:"></TextBlock>
            <TextBox Name="textDeviceArchitecture" AutomationProperties.Name="simple ToggleSwitch" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" IsReadOnly="True" Text="{x:Bind Path=ViewModel.TextDeviceArchitecture.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>

            <TextBlock HorizontalAlignment="Left" Text="Choose APK/s Folder:"></TextBlock>
            <TextBlock  HorizontalAlignment="Right" Margin="10,-10" Text="Only Selected Folder"></TextBlock>
            <ToggleSwitch AutomationProperties.Name="simple ToggleSwitch" x:Name="dark_switch" IsEnabled="True"  CornerRadius="3" VerticalAlignment="Center"  HorizontalAlignment="Right" MinWidth="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
            <Button x:Name="PickFolderButton" Content="Open a folder" Click="PickFolderButton_Click"/>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <TextBlock x:Name="PickFolderOutputTextBlock" TextWrapping="Wrap" FontSize="14"/>
            </StackPanel>
            <ListView ItemsSource="{x:Bind ViewModel.ApkFiles}" HorizontalAlignment="Left">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="CheckBox">
                        <CheckBox Content="{x:Bind Name}" IsChecked="{x:Bind IsChecked, Mode=TwoWay}" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <AppBarSeparator Grid.Column="1" Grid.Row="2" Height="Auto" Width="Auto" Margin="10,10" Padding="20"/>
            <Button Background="Green" Grid.Row="4" Grid.Column="1" Content="Install"/>
        </StackPanel>
            <StackPanel>
                <TextBlock x:Name="textApkFilesName" Text="Apk Files" Grid.Row="0" Grid.Column="1" Padding="20"></TextBlock>
                <CheckBox x:Name="OptionsAllCheckBox" Content="Select all" IsChecked="False" Checked="SelectAll_Checked" Unchecked="SelectAll_Unchecked"></CheckBox>
            </StackPanel>
    </StackPanel>
    </ScrollViewer>
</Page>
